<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CommonLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="QuestionLayout" parent="CommonLayout">
        <item name="android:layout_margin">12dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="QuestionTableRowItem">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">4dp</item>
    </style>

    <style name="QuestionTableRowImage" parent="QuestionTableRowItem">
        <item name="android:adjustViewBounds">true</item>
    </style>

    <style name="QuestionTableRowText" parent="QuestionTableRowItem">
        <item name="android:gravity">center</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="QuestionTableRowPlayButton" parent="QuestionTableRowItem">
        <item name="android:background">@drawable/button_bg</item>
        <item name="android:drawableLeft">@drawable/ic_audiotrack_black_24dp</item>
    </style>

    <style name="QuestionText" parent="CommonLayout">
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:background">@drawable/question_text_frame</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">6dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="RadioGroupLayout" parent="CommonLayout">
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>

    <style name="RadioButtonLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:background">@drawable/question_button_bg</item>
    </style>

    <style name="CheckboxLayout" parent="RadioButtonLayout"/>

    <style name="EditTextCorrectAnswer" parent="CommonLayout">
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:padding">6dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="EditTextAnswer" parent="CommonLayout">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:padding">6dp</item>
        <item name="android:tag">name</item>
    </style>

</resources>
