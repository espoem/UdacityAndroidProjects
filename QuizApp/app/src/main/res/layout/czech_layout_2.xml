<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/czech_layout_2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true">

    <LinearLayout
        style="@style/QuestionLayout"
        android:background="@drawable/frame">

        <TextView
            style="@style/QuestionText"
            android:text="@string/q_czech_capital"/>

        <EditText
            android:id="@+id/czech_capital_edit_text"
            style="@style/EditTextAnswer"
            android:hint="@string/city_name"/>

        <TextView
            android:id="@+id/czech_capital_answer_text_view"
            style="@style/EditTextCorrectAnswer"/>
    </LinearLayout>
</FrameLayout>